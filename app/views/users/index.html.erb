<head>
  <script src="https://kit.fontawesome.com/78227601ab.js" crossorigin="anonymous"></script>
</head>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @introduction %></th>
          </tr>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/:id/edit" %></a>
        </div>

        <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit "Create Book" %>
        <% end %>
      </div>
    </div>
  </div>
</main>