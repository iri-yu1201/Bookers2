<head>
  <script src="https://kit.fontawesome.com/78227601ab.js" crossorigin="anonymous"></script>
</head>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @introduction %></th>
          </tr>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/:id/edit" %></a>
        </div>

        <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit "Create Book" %>
        <% end %>
      </div>
      <div class="col-8 offset-md-1">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
                <td><%= link_to users_path([:id]) do %>
                      <%= attachment_image_tag @user, :image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg" %></td>
                    <% end %>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
      </div>
    </div>
  </div>
</main>